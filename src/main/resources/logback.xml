<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<property name="project" value="yliu_scheduler_server" />
	<property name="path" value="./logs" />

	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${path}/${project}.log</file>

		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${path}/${project}.%d{yyyyMMdd}.log.gz</FileNamePattern>
			<maxHistory>30</maxHistory>>
		</rollingPolicy>

		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}][%level][%thread]%-5logger-%msg%n</pattern>
		</layout>
	</appender>

	<root level="INFO">
		<appender-ref ref="FILE" />
	</root>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}][%level][%thread]%-5logger-%msg%n</pattern>
		</encoder>
	</appender>

	<root level="INFO">
		<appender-ref ref="STDOUT" />
	</root>
	<logger  name="org.springframework.data.mongodb.core" level="DEBUG">

	</logger>
</configuration>
